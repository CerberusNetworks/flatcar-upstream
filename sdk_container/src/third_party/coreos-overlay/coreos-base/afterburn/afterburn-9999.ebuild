DESCRIPTION="A tool for collecting instance metadata from various providers"
HOMEPAGE="https://github.com/coreos/afterburn"
SRC_URI="${CARGO_CRATE_URIS}"

LICENSE="Apache-2.0"
SLOT="0"

DEPEND="dev-libs/openssl:0="

